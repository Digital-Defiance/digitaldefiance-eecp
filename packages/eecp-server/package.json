{
  "name": "@digitaldefiance/eecp-server",
  "version": "0.1.0",
  "description": "Express + WebSocket server for EECP operation routing",
  "keywords": [
    "eecp",
    "server",
    "websocket",
    "express",
    "zero-knowledge",
    "collaboration"
  ],
  "license": "MIT",
  "author": "Digital Defiance",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitaldefiance/eecp-lib.git",
    "directory": "packages/eecp-server"
  },
  "bugs": {
    "url": "https://github.com/digitaldefiance/eecp-lib/issues"
  },
  "homepage": "https://github.com/digitaldefiance/eecp-lib#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "packages/eecp-server/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "packages/eecp-server/src/main.ts",
          "tsConfig": "packages/eecp-server/tsconfig.app.json",
          "assets": [
            "packages/eecp-server/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/packages/eecp-server/dist/package.json",
          "{workspaceRoot}/packages/eecp-server/dist/yarn.lock"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/packages/eecp-server/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@digitaldefiance/eecp-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@digitaldefiance/eecp-server:build:development"
          },
          "production": {
            "buildTarget": "@digitaldefiance/eecp-server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@digitaldefiance/eecp-crypto": "^0.1.0",
    "@digitaldefiance/eecp-protocol": "^0.1.0",
    "express": "^4.21.2",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  }
}
