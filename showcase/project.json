{
  "name": "eecp-showcase",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "showcase/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "vite build",
        "cwd": "showcase"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite",
        "cwd": "showcase"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview",
        "cwd": "showcase"
      }
    }
  },
  "tags": ["type:app", "scope:showcase"],
  "implicitDependencies": ["@digitaldefiance/eecp-browser"]
}
